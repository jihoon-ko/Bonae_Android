<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/hostTab_guestStatus"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="24dp"
            android:background="#000000"/>
        <ImageView
            android:id="@+id/hostTab_guestProfile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/hostTab_guestStatus"
            android:layout_marginRight="12dp"
            android:src="#759DC8"/>
        <TextView
            android:id="@+id/hostTab_guestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/hostTab_guestProfile"
            android:layout_alignBaseline="@id/hostTab_guestProfile"
            android:text="고지훈"
            android:textSize="32dp"/>
        <TextView
            android:id="@+id/hostTab_guestMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/hostTab_guestName"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:text="8000원"
            android:textSize="28dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hostTab_requestMessage"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000원 요청 왔습니다!"/>
        <Button
            android:id="@+id/hostTab_noButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="거절" />
        <Button
            android:id="@+id/hostTab_yesButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/hostTab_noButton"
            android:text="승인"/>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <ImageView
        android:id="@+id/hostTab_guestProfile"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginRight="10dp"
        android:src="#759DC8"/>
    <TextView
        android:id="@+id/hostTab_guestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hostTab_guestProfile"
        android:layout_alignBaseline="@id/hostTab_guestProfile"
        android:text="고지훈"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/hostTab_guestMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hostTab_guestProfile"
        android:layout_marginLeft="10dp"
        android:text="8000원"
        android:textSize="24dp"/>
    <Button
        android:id="@+id/hostTab_noButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="거절" />
    <Button
        android:id="@+id/hostTab_yesButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/hostTab_noButton"
        android:text="승인"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.jihoon.bonae_android.MainActivity">

    <RelativeLayout
        android:id="@+id/myInfo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:background="@color/profileBackground">
        <ImageView
            android:id="@+id/myProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:src="@color/profileColor"/>
        <RelativeLayout
            android:layout_toRightOf="@id/myProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            <TextView
                android:id="@+id/myName"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textSize="24dp"/>
            <TextView
                android:id="@+id/myBank"
                android:layout_below="@id/myName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="2dp"
                android:text="계좌은행"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/myaccountBank"
                android:layout_below="@id/myName"
                android:layout_toRightOf="@id/myBank"
                android:layout_alignBaseline="@id/myBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BANK"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/myNumber"
                android:layout_below="@id/myBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:text="계좌번호"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/myaccountNumber"
                android:layout_below="@id/myaccountBank"
                android:layout_toRightOf="@id/myNumber"
                android:layout_alignBaseline="@id/myNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NUMBER"
                android:textSize="14dp"/>

        </RelativeLayout>

        <Button
            android:id="@+id/editmyInfoButton"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="편집"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tab4"
        android:textSize="50dp"/>

</LinearLayout>
